{
  "name": "chaitanyagadodia.github.io",
  "version": "1.0.0",
  "description": "React, Typescript, Next.js, Emotion Portfolio Website",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "build": "next build;",
    "start": "next start",
    "export": "next export",
    "deploy": "rm -rf node_modules/.cache && next build && next export && touch out/.nojekyll && git add out/ && git commit -m \"Deploy Next.js to gh-pages\" && git subtree push --prefix out origin gh-pages",
    "lint": "eslint --fix './{components,pages,styles}/**/*.{ts,tsx}'",
    "pdf:resume": "node ./utils/pdf.js && git add public/resume/*"
  },
  "keywords": [],
  "author": "Chaitanya Gadodia <chaitanya.gadodia01@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@emotion/react": "^11.1.4",
    "next": "^11.1.0",
    "next-pwa": "^5.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@emotion/babel-plugin": "^11.1.2",
    "@emotion/eslint-plugin": "^11.0.0",
    "@types/node": "^14.14.20",
    "@types/puppeteer": "^5.4.2",
    "@types/react": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "eslint": "^7.17.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "husky": "^4.3.7",
    "imagemin-lint-staged": "^0.4.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "puppeteer": "^5.5.0",
    "spritesmith-cli": "^1.1.2",
    "typescript": "^4.1.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged"
    ],
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": {
    "trailingComma": "none",
    "arrowParens": "avoid"
  }
}
